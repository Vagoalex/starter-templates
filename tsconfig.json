{
	"compilerOptions" : {
		"target" : "ESNext",
		"useDefineForClassFields" : true,
		"module" : "ESNext",
		"moduleResolution" : "Node",
		"strict" : true,
		"jsx" : "preserve",
		"resolveJsonModule" : true,
		"isolatedModules" : true,
		"esModuleInterop" : true,
		"strictPropertyInitialization" : false,
		"lib" : [
			"ESNext",
			"DOM"
		],
		"skipLibCheck" : true,
		"noEmit" : true,
		"paths" : {
			"@/*" : [
				"./src/*"
			],
			"@assets/*" : [
				"./src/shared/assets/*"
			]
		}
	},
	"include" : [
		"./src/**/*.ts",
		"./src/**/*.d.ts",
		"./src/**/*.tsx",
		"./src/**/*.vue",
		"./src/**/*.scss",
	],
	"references" : [
		{
			"path" : "./tsconfig.node.json"
		}
	]
}
